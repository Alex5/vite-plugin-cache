{
  "compilerOptions": {
    "lib": ["ES2021", "WebWorker"],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
